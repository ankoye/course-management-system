<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anko.coursems.dao.UserMapper">

    <select id="findUserById" parameterType="string" resultType="userInfo">
        select * from t_user
        where user_id=#{userId}
    </select>

    <update id="updateUserInfo" parameterType="userInfo">
        update t_user
        set user_name=#{userName}, nickname=#{nickname},
            stu_num=#{stuNum}, gender=#{gender},
            birthday=#{birthday}, signature=#{signature}
        where user_id = #{userId}
    </update>
    
    <update id="updateAvatar">
        update t_user
        set avatar = #{avatar}
        where user_id = #{userId}
    </update>

    <update id="updatePassword" parameterType="userInfo">
        update t_user
        set password = #{password}
        where user_id = #{userId}
    </update>

    <update id="bindEmail">
        update t_user
        set email = #{email}
        where user_id = #{userId}
    </update>

    <update id="bindPhone">
        update t_user
        set phone_num = #{phoneNum}
        where user_id = #{userId}
    </update>

    <select id="emailIsExist" parameterType="string" resultType="userInfo">
        select * from t_user
        where email = #{email}
    </select>

    <select id="phoneIsExist" parameterType="string" resultType="userInfo">
        select * from t_user
        where phone_num = #{phoneNum}
    </select>
    
</mapper>